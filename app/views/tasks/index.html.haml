%h1 Tasks

%table
	%thead
		%tr
			%th Statement
			%th 
			%th
			%th
	
	%tbody
		- @tasks.each do |task|
			%tr
				%td 
					=task.statement
				%td 
					=link_to 'Show', task
				%td 
					=link_to 'Edit', edit_task_path(task)
				%td 
					=link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
			
%br

%p
	= link_to 'New Task', new_task_path