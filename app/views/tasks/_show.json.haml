%li{id: "task-#{task.id}", class: "task #{task.team ? 'team' : 'child'} #{cycle('odd', 'even', name: :task_class)}"}
	%div{class: :content}
		= render partial: 'show_content', locals: {task: task, show_children: show_children}
	%ul{class: :children}
		- if show_children
			- task.children.each do |child|
				= render partial: 'show', locals: {task: child, depth: depth+1, show_children: true}

