- tasks.each do |task|
	%li{id: "task-#{task.id}", class: "child task #{cycle('odd', 'even', name: :task_class)}"}
		%div{class: :content}
			= render partial: 'show_content', locals: {task: task, show_children: show_children}
		%ul{class: :children}
			- if task.children.length > 0
				= render partial: 'show_children', locals: {tasks: task.children, depth: depth+1, show_children: show_children}

